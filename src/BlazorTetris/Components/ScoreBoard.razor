@using BlazorTetris.Models

<div class="scoreboard">
    <div class="score-item">
        <span class="score-label">Score</span>
        <span class="score-value">@State.Score</span>
    </div>
    <div class="score-item">
        <span class="score-label">Level</span>
        <span class="score-value">@State.Level</span>
    </div>
    <div class="score-item">
        <span class="score-label">Lines</span>
        <span class="score-value">@State.LinesCleared</span>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public GameState State { get; set; } = null!;
}
